{% embed 'partials/base.html.twig' %}
	{% set collection = page.collection() %}
	{% set base_url = page.url %}
	{% set feed_url = base_url %}

	{% if base_url == '/' %}
		{% set base_url = '' %}
	{% endif %}

	{% if base_url == base_url_relative %}
		{% set feed_url = base_url~'/'~page.slug %}
	{% endif %}

	{% block content %}
		<div class="container">
			<div class="row">
				<div class="col s12 m8 l8">
				</br>
				{{ page.content }}
				<p>Know of a great resource item or collection to add? <a href="{{ 'https://github.com/paulhibbitts/cmpt-363-153-website/blob/master' ~ ('/'~page.filePathClean) }}">Edit this page on <i class="mdi mdi-github-circle"></i>GitHub</a></p>
				</div>

				<div class="col s0 m4 l4 blog-sidebar">
					{% include 'partials/sidebar.html.twig' %}
					{# {% include 'partials/sidebar_page.html.twig' with {'page':'sidebar', 'truncate':false} %} #}
				</div>
			</div>
		</div>
	{% endblock %}

{% endembed %}
